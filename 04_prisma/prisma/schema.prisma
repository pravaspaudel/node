generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Event     Event[]
}

enum Role {
  USER
  ADMIN //admin can manage events
}

model Event {
  id           String   @id @default(uuid())
  title        String
  description  String?
  location     String
  startingtime DateTime
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  price        Int
  duration     DateTime
}
